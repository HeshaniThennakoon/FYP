@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>

<body>
    <div class="container">
        <div class="illustration">
            <img src="~/images/classroom.jpg" alt="classroom illustration" />
        </div>

        <div class="login-box">
            <div class="role-toggle">
                <input type="radio" id="student" name="role" value="Student" checked />
                <label for="student">Student</label>
                <input type="radio" id="teacher" name="role" value="Teacher" />
                <label for="teacher">Teacher</label>
            </div>

            <form id="LoginForm" method="post">
                <h2>LOG IN</h2>

                <!-- Video Section for Students -->
                <div class="video-section" id="videoSection">
                    <div class="controls">
                        <button class="btn-share" id="startSharingBtn">                            
                        <i class="fa fa-camera"></i> Start Sharing
                        </button>
                    </div>
                </div>    

                <input type="text" id="email" name="email" placeholder="youremail@mail.com" readonly required />
                <input type="password" id="password" name="password" placeholder="********" required />

                <div class="forgot-password">
                    <a asp-action="ForgotPassword" asp-controller="Auth">Forgot your password?</a>
                </div>

                <button type="submit">Log in</button>

                <div class="signup-link">
                    <p>Don't have an account? <a asp-action="SignUp" asp-controller="Account">Sign Up</a></p>
                </div>

                <p id="error" class="error" style="color:red; margin-top:10px;"></p>

                @if(ViewBag.Error != null)
                {
                    <p class="error">@ViewBag.Error</p>
                }
            </form>

        </div>
    </div>

<script>
document.addEventListener('DOMContentLoaded', function () {
    const loginForm = document.getElementById("LoginForm");
    const errorMsg = document.getElementById("error");
    const startSharingBtn = document.getElementById("startSharingBtn");
    const videoSection = document.getElementById("videoSection");
    const roleRadios = document.querySelectorAll('input[name="role"]');
    const emailInput = document.getElementById("email");

    // Toggle video section & email editability based on role
    roleRadios.forEach(radio => {
        radio.addEventListener("change", function () {
            if (this.value === "Student") {
                videoSection.style.display = "block";
                emailInput.readOnly = true;
                emailInput.value = "";
            } else {
                videoSection.style.display = "none";
                emailInput.readOnly = false;
                emailInput.value = "";
            }
        });
    });

    loginForm.addEventListener("submit", async function (e) {
        e.preventDefault();
        errorMsg.textContent = "";

        const role = document.querySelector('input[name="role"]:checked').value;
        let email = emailInput.value.trim();
        const password = document.getElementById("password").value;

        // Validation
        if (!email) {
            errorMsg.textContent = role === "Student" 
                ? "Please complete face verification first." 
                : "Please enter your email.";
            return;
        }
        if (!password) {
            errorMsg.textContent = "Please enter your password.";
            return;
        }

        try {
            const response = await fetch("http://localhost:3000/api/user/login", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ email, password, role: role.toLowerCase() })
            });

            const data = await response.json();

            if (!response.ok) {
                errorMsg.textContent = data.error || "Login failed. Check your credentials.";
                return;
            }

            // Save token & payload
            localStorage.setItem("token", data.token);
            localStorage.setItem("role", data.role);
            const payload = JSON.parse(atob(data.token.split('.')[1]));
            localStorage.setItem("userId", payload.userId);
            localStorage.setItem("name", payload.name);

            // Redirect based on role
            if (data.role === "teacher") {
                window.location.href = "/Teacher/Dashboard";
            } else {
                window.location.href = "/Student/Dashboard";
            }

        } catch (err) {
            errorMsg.textContent = "Server error. Please try again later.";
        }
    });

    // Student face login only
    startSharingBtn.addEventListener("click", async function (e) {
        e.preventDefault();

        const role = document.querySelector('input[name="role"]:checked').value;
        if (role !== "Student") return;

        try {
            const response = await fetch("http://localhost:5001/start-face-login", {
                method: "POST"
            });
            const data = await response.json();

            if (data.success) {
                emailInput.value = data.email;
                document.getElementById("password").focus();
            } else {
                alert("Face not recognized");
            }
        } catch (err) {
            alert("Face service not running");
        }
    });
});
</script>

</body>
</html>
